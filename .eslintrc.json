{
  "env": {
    "commonjs": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 8
  },
  "rules": {
    "no-console": "warn",
    "no-undef": ["warn"],
    "semi": ["error", "never"],
    "quotes": ["warn", "single"],
    "no-unused-vars": "warn",
    "no-extra-semi": "error",
    "no-const-assign": "warn",
    "no-this-before-super": "warn",
    "no-unreachable": "warn",
    "constructor-super": "warn",
    "valid-typeof": "warn",
    "no-new-func": "error",
    "no-eval": "error",
    "no-empty": "off"
  },
  "globals": {
    "theone": true
  }
}
